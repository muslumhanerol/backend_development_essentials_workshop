@model List<Bootcamp>

@* _Header.cshtml css özellikerini kullanabilsin diye RenderSection yaptık. _Layout.cshtml içerisinde *@
@section Header {
    @* _Header.cshtml Partialı *@
    @await Html.PartialAsync("_Header")
}

<div class="row">

    @foreach (var bootcamp in Model)
    {
        @if (bootcamp.IsActive && bootcamp.IsHome)
        {

            <div class="card" id="bootcamp @bootcamp.id" style="width: 18rem;">
                <img src="~/img/@bootcamp.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@bootcamp.Title</h5>
                    <p class="card-text">@bootcamp.Description</p>
                    <a asp-controller="Bootcamp" asp-action="Details" asp-route-id="@bootcamp.id"
                        class="btn btn-success">Detay</a>
                </div>
            </div>
        }
    }
</div>

@* 1. Model > Bootcamp.cs içerisinde model oluşturuldu. 2.BootcampController.cs içerisind nesne oluşturuldu ve view e yani buraya gönderildi. Artık buradan en üst satıra @model Bootcamp yazarak Bootcamp.cs içerisinde BootcampController.cs tarafında atadığım özelliklerin hepsi buraya gelecek.  *@