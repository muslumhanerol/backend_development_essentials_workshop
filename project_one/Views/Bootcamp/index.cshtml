@model Bootcamp
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success">
            <div class="container">
                <a href="#" class="navbar-brand">Techcareer.net</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Bootcamp" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Bootcamp" asp-action="List" class="nav-link">Bootcamp</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container p-3">
        <main>
            <div class="card" style="width: 18rem;"></div>
            <img src="~/img/@Model.Image" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
    </div>

    </main>
    </div>
</body>

</html>

@* 1. Model > Bootcamp.cs içerisinde model oluşturuldu. 2.BootcampController.cs içerisind nesne oluşturuldu ve view e yani buraya gönderildi. Artık buradan en üst satıra @model Bootcamp yazarak Bootcamp.cs içerisinde BootcampController.cs tarafında atadığım özelliklerin hepsi buraya gelecek.  *@